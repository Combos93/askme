<div class="user-header text-center" style="background: <%= @user.headers_color %>">
  <h1 class="title-medium">
    <%= @user.name %>
  </h1>

  <div class="buffer-both">
    <%= link_to 'Редактировать профиль', edit_user_path(@user) if current_user == @user %>
  </div>

  <% if current_user == @user %>
    <div class="question-actions">
      <%= link_to "Удалить пользователя", user_path(@user), class: 'button button-red',
                  method: :delete, data: {confirm: 'Точно удалить пользователя?'} %>
    </div>
  <% end %>

  <div class="user-image-div">
    <%= image_tag user_avatar(@user), class: 'user-image', alt: '[Фото]' %>
  </div>

  <h2 class="title-small buffer-both">
    @<%= @user.username %>
  </h2>

  <div class="title-small buffer-both">
    <% if @questions.count == 0 %>
      <%= "У Вас #{sklonenie(@questions.count, "вопрос", "вопроса", "вопросов")}" %>
    <% else %>
      <%= "У Вас #{@questions.count} #{sklonenie(@questions.count, "вопрос", "вопроса", "вопросов")}" %>
    <% end %>
  </div>

  <div class="user-details">
    <div class="user-ask-button container text-center">
      <%= link_to "Спроси меня", '', class: 'button button-light', id: 'ask-button' %>
    </div>

    <div class="user-statistics container text-center">
      <div class="column-1-3">
        <h1 class="title-small"><%= @questions_count unless @questions_count == 0 %></h1>
        <p><%= "#{sklonenie(@questions_count, "вопрос",
                            "вопроса", "вопросов")}" %></p>
      </div>
      <div class="column-1-3">
        <h1 class="title-small"><%= @answers_count unless @answers_count == 0 %></h1>
        <p><%= "#{sklonenie(@answers_count, "ответ",
                            "ответа", "ответов")}" %></p>
      </div>
      <div class="column-1-3">
        <h1 class="title-small"><%= @unanswered_count unless @unanswered_count == 0 %></h1>
        <p><%= "#{sklonenie(@unanswered_count, "неотвеченный вопрос",
                            "неотвеченных вопроса", "неотвеченных вопросов")}" %></p>
      </div>
    </div>
  </div>
</div>

<div class="user-question-form-div column-1-4 column-1-4-right" id='ask-form'>
  <div class="user-question-form buffer-both">
    <div class="form">
      <%= form_for @new_question do |f| %>
        <%= f.hidden_field :user_id %>
        <%= f.hidden_field :author_id %>

        <div class="form-field">
          <%= f.label "Ваш вопрос для @#{@user.username}", class: 'form-label' %>
          <%= f.text_area :text, class: 'form-textarea' %>
        </div>

        <div class="form-action">
          <%= submit_tag 'Задать вопрос', class: 'button button-green' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="column-3-4">
  <div class="user-questions buffer-both">
    <div class="questions-list">
      <% @questions.each do |question| %>
        <%= render partial: 'questions/question', object: question %>
      <% end %>
    </div>
  </div>
</div>
